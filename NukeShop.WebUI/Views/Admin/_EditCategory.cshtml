@using NukeShop.BLL.DTOs.ProductDtos;
@using NukeShop.WebUI.ViewModels;
@model CategoryViewModel
@{
}
<div aria-hidden="true" aria-labelledby="modal-edit-category-label-@Model.Id"
     role="dialog" tabindex="-1" id="modal-edit-category-@Model.Id" class="modal fade">
    <div class="modal-dialog">


        <div class="modal-content">
            <div class="modal-header">
                <h5>Edit category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-antiforgery="true" asp-action="EditCategory" method="post" class="needs-validation" enctype="multipart/form-data">
                <div class="modal-body ">

                    <div class="form-group">

                        <input asp-for="Id" type="hidden" required />

                        <label asp-for="Name" class="col-form-label">Название</label>
                        <input asp-for="Name" class="form-control" placeholder="Название" required />
                        <div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Edit category</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">Отмена</span></button>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }