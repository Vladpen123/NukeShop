@model IEnumerable<NukeShop.WebUI.Users.User>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<a asp-action="CreateUser">Add user</a>

<table class="table">
    <tr><th>Email</th><th>Full name</th><th>Registration date</th><th>Roles</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FIO</td>
            <td>@user.RegistrationDate</td>
              <td>
                <a class="btn-link" asp-action="EditRole" asp-route-userid="@user.Id">Permissions</a>
            </td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>